<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/imgs/favicon-32x32.png"/>
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@100&family=Roboto:wght@100;400;700&display=swap" rel="stylesheet">
    <!-- MaterializeCSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- External css -->
    <link rel="stylesheet" href="/css/reset.css" type="text/css">
    <link rel="stylesheet" href="/css/normalize.css" type="text/css">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <title>Edit Todo</title>
</head>
<body>
    <%- include('./partials/header.ejs') %>
    <main class="edit-main">
        <div class="container">
            <div class="card">
                <section class="card-content">
                    <h2 class="center-align">Edit your details</h2>
                    <% todos.forEach( el => { %>
                    <form class="col-1" action="/todos/<%=el._id%>?_method=PUT" data-id="<%=el._id%>" method="POST">
                    <!-- <form action="/todos/<%=el._id%>" data-id="<%=el._id%>" method="POST"> -->
                        <label for="title">Phone Number:</label>
                        <input type="tel" placeholder="(800)-939-8252" name="contactNumber" class="margin" value="<%=el.contactNumber%>" autofocus>
                        <label for="vehicleAddressPick">Pickup address:</label>
                        <input type="text" placeholder="2300 California Ave / i-5 Northbound after exit 4 far right shoulder" name="vehicleAddressPick" class="margin" value="<%=el.vehicleAddressPick%>">
                        <label for="vehicleAddressDrop">Dropoff address:</label>
                        <input type="text" placeholder="Store at tow yard / Bob's Autobody" name="vehicleAddressDrop" class="margin" value="<%=el.vehicleAddressDrop%>">
                        <label for="contactRideAlong">Ride with driver?:</label>
                        <select name="contactRideAlong" required class="margin">
                            <option value="" selected>Please select an option</option>
                            <option value="true">Yes I will be with the vehicle.</option>
                            <option value="false">No the vehicle is unattended.</option>
                        </select>
                        <% users.forEach( user => { %>
                            <% if (user.role !== 'customer') { %>
                                <label for="status">Status:</label>
                                <select name="completed" required class="margin">
                                    <option value="false" selected>Incomplete</option>
                                    <option value="true">Complete</option>
                                </select>
                            <% } %>
                        <% }) %>
                        <label for="vehicleYear">Year:</label>
                        <input type="text" placeholder="2001" name="vehicleYear" class="margin" value="<%=el.vehicleYear%>">
                        <label for="vehicleMake">Make:</label>
                        <input type="text" placeholder="Toyota" name="vehicleMake" class="margin" value="<%=el.vehicleMake%>">
                        <label for="vehicleModel">Model:</label>
                        <input type="text" placeholder="Corolla" name="vehicleModel" class="margin" value="<%=el.vehicleModel%>">
                        <label for="vehicleLocation">Pickup/Dropoff Information</label>
                        <textarea name="vehicleLocation" cols="30" rows="6" placeholder="Key under passenger-side floormat...Unload in driveway, call after dropoff" class="margin"><%=el.vehicleLocation%></textarea>
                        <button type="submit" class="hoverable waves-effect waves-light btn blue-grey">Submit</button>
                    </form>
                    <% }) %>
                </section>
            </div>
        </div>
    </main>
    <%- include('./partials/footer.ejs') %>
    <script type="module" src="/js/main.js"></script>
    <!-- <script type="text/javascript" src="js/main.js"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://kit.fontawesome.com/9f91d488b5.js" crossorigin="anonymous"></script>
    <script>
        M.Dropdown.init(document.querySelector('.dropdown-trigger'))
    </script>
</body>
</html>